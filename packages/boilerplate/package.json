{
  "private": true,
  "name": "preact-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template src/index.html --no-prerender",
    "serve": "preact build --template src/index.html && preact serve",
    "dev": "preact watch --template src/index.html",
    "lint": "eslint src",
    "test": "jest ./tests"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "fast-async": "^6.3.7",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.1.0",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "p-to-r": "^1.0.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "axios": "^0.18.0",
    "@ruiyun/preact-layout-suite": "^1.0.0",
    "@ruiyun/preact-line": "^1.0.0",
    "preact-router": "^2.5.7",
    "@ruiyun/preact-m-scroller": "^1.0.0",
    "@ruiyun/preact-text": "^1.0.0",
    "@ruiyun/preact-m-auto-list": "^1.0.0"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
